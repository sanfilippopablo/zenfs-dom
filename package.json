{
	"name": "@zenfs/dom",
	"version": "0.2.16",
	"description": "DOM backends for ZenFS",
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"type": "module",
	"homepage": "https://github.com/zen-fs/dom",
	"author": "James Prevett <jp@jamespre.dev>",
	"license": "MIT",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/zen-fs/dom.git"
	},
	"bugs": {
		"url": "https://github.com/zen-fs/dom/issues"
	},
	"files": [
		"dist",
		"src",
		"license.md",
		"tsconfig.json"
	],
	"engines": {
		"node": ">= 18"
	},
	"exports": {
		".": "./dist/index.js",
		"./*": "./dist/*"
	},
	"scripts": {
		"format": "prettier --write .",
		"format:check": "prettier --check .",
		"lint": "tsc -p tsconfig.json --noEmit && eslint src",
		"build": "npx build --package=@zenfs/core --globalName ZenFS_DOM --entry src/index.ts",
		"build:docs": "typedoc --out docs --name 'ZenFS DOM' src/index.ts",
		"test": "echo No tests yet",
		"prepublishOnly": "npm run build"
	},
	"devDependencies": {
		"@eslint/js": "^9.12.0",
		"@fal-works/esbuild-plugin-global-externals": "^2.1.2",
		"esbuild": "^0.21.0",
		"eslint": "^9.12.0",
		"globals": "^15.10.0",
		"prettier": "^3.2.5",
		"typedoc": "^0.25.1",
		"typescript": "^5.4.5",
		"typescript-eslint": "^8.8.1"
	},
	"peerDependencies": {
		"@zenfs/core": "^1.0.4"
	},
	"keywords": [
		"filesystem",
		"node",
		"storage"
	]
}
